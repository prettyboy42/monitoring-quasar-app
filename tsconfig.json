{
  "extends": "@quasar/app/tsconfig-preset",
  "compilerOptions": {
    "lib": ["es6", "esnext", "dom", "dom.iterable", "scripthost"],
    //https://github.com/championswimmer/vuex-module-decorators
    "experimentalDecorators": true,
    "importHelpers": true, //For reduced code with decorators, set importHelpers: true in tsconfig.json
    "baseUrl": ".",
    "allowSyntheticDefaultImports": true //Enable this flag in order to use ApexCharts
  },
  "include": ["src/**/*.ts", "src/**/*.js", "src/**/*.vue"],
  "exclude": ["node_modules", "public", "dist", ".quasar"]
}
